  <refentry id="function.strlen">
   <refnamediv>
    <refname>strlen</refname>
    <refpurpose>Retorna o tamanho de uma string</refpurpose>
   </refnamediv>
   <refsect1>
    <title>Descrição</title>
     <methodsynopsis>
      <type>int</type><methodname>strlen</methodname>
      <methodparam><type>string</type><parameter>str</parameter></methodparam>
     </methodsynopsis>
    <para>
     Retorna o tamanho de <parameter>string</parameter>.
    </para>
     <para>
      <example>
       <title>Exemplo <function>strlen</function></title>
       <programlisting role="php">
<![CDATA[
<?php
$str = 'abcdef';
echo strlen($str); // 6

$str = ' ab cd ';
echo strlen($str); // 7
?>
]]>
      </programlisting>
     </example>
    </para>
    <para>
     Veja também <function>count</function>.
    </para>
   </refsect1>
  </refentry>

