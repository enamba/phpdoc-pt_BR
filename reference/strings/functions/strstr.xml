 <refsect1 role="examples">
  &reftitle.examples;
    <para>
     <example>
      <title>Exemplo <function>strstr</function></title>
      <programlisting role="php">
<![CDATA[
<?php
$email  = 'name@example.com';
$domain = strstr($email, '@');
echo $domain; // prints @example.com

$user = strstr($email, '@', true);
echo $user; // prints name
?>
]]>
      </programlisting>
     </example>
    </para>
 </refsect1>

