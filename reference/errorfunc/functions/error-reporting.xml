    <refsect1 role="returnvalues">
     &reftitle.returnvalues;
     <para>
      Retorna o nível anterior de
      <link linkend="ini.error-reporting">error_reporting</link>.
     </para>
    </refsect1>

    <refsect1 role="changelog">
